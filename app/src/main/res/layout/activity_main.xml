<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/cosmos_game5">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotty_night_fire"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:visibility="invisible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-240dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lotty1"
            android:layout_width="230dp"
            android:layout_height="280dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
           android:visibility="invisible"
            android:layout_marginTop="-50dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lotty2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="invisible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/images_robots_layuot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:src="@drawable/robot_women_grey"

            android:layout_marginLeft="24dp" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:src="@drawable/robot_grey"

            android:layout_marginLeft="44dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name_1"
            android:layout_marginLeft="44dp"
            android:textSize="20sp"
            android:textColor="#FFEB3B" />

        <TextView
            android:id="@+id/name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name_2"
            android:textSize="20sp"
            android:layout_marginLeft="160dp"
            android:textColor="#FFEB3B" />

    </LinearLayout>

    <TextView
        android:id="@+id/opisanieRobotWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="opisanie_robots_word"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy1:  "
            android:textColor="#FFEB3B"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_energy1"
            android:layout_width="90dp"
            android:layout_height="40dp"

            android:textSize="26sp"
            android:textColor="#FFEB3B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy2:  "
            android:textSize="26sp"
            android:textColor="#FFEB3B" />

        <TextView
            android:id="@+id/tv_energy2"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textColor="#FFEB3B"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lasers1:  "
            android:textSize="26sp"
            android:textColor="#FFEB3B" />

        <TextView
            android:id="@+id/tv_lasers1"
            android:layout_width="90dp"
            android:layout_height="40dp"

            android:textSize="26sp"
            android:textColor="#FFEB3B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lasers2:  "
            android:textSize="26sp"
            android:textColor="#FFEB3B" />

        <TextView
            android:id="@+id/tv_lasers2"
            android:layout_width="90dp"
            android:layout_height="40dp"

            android:textSize="26sp"
            android:textColor="#FFEB3B" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start"
        android:layout_width="110dp"
        android:layout_height="60dp"
        app:cornerRadius="16dp"
        app:backgroundTint="#880505"
        android:text="Start"
        android:textSize="18sp"
        android:layout_marginStart="26dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_fight"
        android:layout_width="110dp"
        android:layout_height="60dp"
        app:cornerRadius="16dp"
        app:backgroundTint="#FF9800"
        android:text="Fight!"
        android:textSize="18sp"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="280dp"
        android:visibility="invisible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_game_over"
        android:layout_width="190dp"
        android:layout_height="90dp"
        app:cornerRadius="26dp"
        app:backgroundTint="#FFEB3B"
        android:text="GAME OVER !"
        android:textSize="18sp"
        android:layout_marginStart="110dp"
        android:visibility="invisible"
        android:layout_marginTop="-60dp" />


</LinearLayout>